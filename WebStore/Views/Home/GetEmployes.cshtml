
@{
    ViewData["Title"] = "GetEmployes";
}

@model IEnumerable<WebStore.ViewModels.EmployeeView>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetEmployes</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество </th>
                <th>Возраст</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <!--<td>@employee.Id</td>-->
                    <td>@Html.ActionLink(employee.SecondName, "GetEmployee", "Home", new { employeeId = employee.Id })</td>
                    <td>@Html.ActionLink(employee.FirstName, "GetEmployee", "Home", new { employeeId = employee.Id })</td>
                    <td>@Html.ActionLink(employee.Patronymic, "GetEmployee", "Home", new { employeeId = employee.Id })</td>
                    <td>@Html.ActionLink(employee.Age.ToString(), "GetEmployee", "Home", new { employeeId = employee.Id })</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>


